<project xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<parent>
		<groupId>org.frankframework</groupId>
		<artifactId>frankframework-parent</artifactId>
		<version>${revision}</version>
	</parent>

	<artifactId>frankframework-ladybug</artifactId>
	<name>Frank Ladybug</name>
	<packaging>pom</packaging>

	<properties>
		<ladybug.version>3.0-20250107.001038</ladybug.version>
	</properties>

	<modules>
		<module>common</module>
		<module>rerunner</module>
		<module>debugger</module>
	</modules>

	<!-- Update the transitive CXF dependency by importing the cxf BOM of the correct version -->
	<dependencyManagement>
		<dependencies>
			<dependency>
				<groupId>org.apache.cxf</groupId>
				<artifactId>cxf-bom</artifactId>
				<version>4.0.6</version>
				<type>pom</type>
				<scope>import</scope>
			</dependency>
		</dependencies>
	</dependencyManagement>
</project>
