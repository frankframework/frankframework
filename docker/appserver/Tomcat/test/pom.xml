				<artifactId>maven-antrun-plugin</artifactId>
				<version>1.6</version>
				<executions>
					<execution>
						<id>prepare-package</id>
						<phase>package</phase>
						<inherited>false</inherited>
						<configuration>
							<target>
								<exec executable="docker" failonerror="true">
									<arg value="build"/>
									<arg value="-t"/>
									<arg value="iaf-${config.tag}-tomcat"/>
