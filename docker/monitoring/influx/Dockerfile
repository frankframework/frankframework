FROM influxdb:2.4.0

ENV INFLUXD_REPORTING_DISABLED=true

# Prepare initial setup, is not executed when data is present already
ENV DOCKER_INFLUXDB_INIT_MODE=setup
ENV DOCKER_INFLUXDB_INIT_USERNAME=admin
ENV DOCKER_INFLUXDB_INIT_PASSWORD=admin123
ENV DOCKER_INFLUXDB_INIT_ORG=waf
ENV DOCKER_INFLUXDB_INIT_BUCKET=ibis4test
ENV DOCKER_INFLUXDB_INIT_ADMIN_TOKEN=admintoken123

HEALTHCHECK CMD curl -f http://localhost:8086/ping