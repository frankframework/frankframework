<module>
<monitoring enabled="${monitoring.enabled}">
	<destinations>
		<destination name="GALM" className="nl.nn.adapterframework.monitoring.GalmMonitorAdapter"/>
	</destinations>
		<!--
		<destination name="log" className="nl.nn.adapterframework.monitoring.SenderMonitorAdapter">
			<sender className="nl.nn.adapterframework.senders.LogSender" logCategory="monitoring"/>
		</destination>
		-->
	<monitors>
		<monitor name="Internal adapter exception" type="TECHNICAL" destinations="GALM">
			<alarm eventCode="Pipe Exception" severity="CRITICAL" threshold="10" period="3600">
				<filters filterExclusive="false">
					<adapterfilter adapter="TransactionTimeoutHandlingNonTransacted" />
					<adapterfilter adapter="TransactionTimeoutHandlingTransacted" />
				</filters>
			</alarm>
		</monitor>
		<monitor name="Sender timeout" type="TECHNICAL" destinations="GALM">
			<alarm eventCode="Sender Timeout" severity="CRITICAL" threshold="10" period="3600">
				<filters filterExclusive="false">
					<adapterfilter adapter="TransactionHandlingMandatory">
						<sources>
							<source>Pipe [Send transacted message to mandatory subadapter]</source>
						</sources>
					</adapterfilter>
					<adapterfilter adapter="TransactionHandlingMandatorySubAdapter">
						<sources>
							<source>Pipe [Continue if this call was transacted]</source>
						</sources>
					</adapterfilter>
				</filters>
			</alarm>
		</monitor>
		<monitor name="Sender exception" type="TECHNICAL" destinations="GALM">
			<alarm eventCode="Sender Exception Caught" severity="CRITICAL" threshold="10" period="3600"/>
		</monitor>
		<monitor name="Invalid XML Message" type="FUNCTIONAL">
			<alarm eventCode="Invalid XML: does not comply to XSD" severity="WARNING"/>
			<alarm eventCode="Invalid XML: parser error" severity="WARNING"/>
		</monitor>
		<monitor name="Configuration error" type="TECHNICAL" destinations="GALM">
			<alarm eventCode="Exception Configuring Receiver" severity="CRITICAL"/>
		</monitor>
		<monitor name="Message size exceeding" type="TECHNICAL">
			<alarm eventCode="Pipe Message Size Exceeding" severity="WARNING"/>
		</monitor>
		<monitor name="Message in Error" type="FUNCTIONAL" destinations="GALM">
			<alarm severity="WARNING">
				<events>
					<event>Receiver Moved Message to ErrorStorage</event>
				</events>
				<filters filterExclusive="false"/>
			</alarm>
			<clearing severity="WARNING">
				<events>
					<event>Receiver Moved Message to ErrorStorage</event>
				</events>
				<filters filterExclusive="false"/>
			</clearing>
		</monitor>
		<monitor name="Receiver Shutdown" type="TECHNICAL" destinations="GALM">
			<alarm severity="WARNING">
				<events>
					<event>Receiver Shutdown</event>
				</events>
				<filters filterExclusive="false"/>
			</alarm>
			<clearing severity="WARNING">
				<events>
					<event>Receiver Shutdown</event>
				</events>
				<filters filterExclusive="false"/>
			</clearing>
		</monitor>
	</monitors>
</monitoring>
	<adapter
		name="TransactionTimeoutHandlingTransacted"
		description="Adapter for testing transactionTimeout handling. (Transacted)"
	>
		<receiver
			transactionTimeout="2"
			transactionAttribute="Required"
		>
			<listener
				className="nl.nn.adapterframework.receivers.JavaListener"
				name="TransactionTimeoutHandlingTransacted"
				serviceName="ibis4test-TransactionTimeoutHandlingTransacted"
			/>
			<errorStorage className="nl.nn.adapterframework.jdbc.JdbcTransactionalStorage"
				jmsRealm="jdbc" 
				slotId="${applicationId}/GenericReceiverTransactionTimeoutHandlingTransacted"
			/>
		</receiver>

		<pipeline firstPipe="set start index">
			<exits>
				<exit path="READY" state="success"/>
			</exits>

			<pipe name="set start index"
				className="nl.nn.adapterframework.pipes.PutInSession"
				sessionKey="index"
				getInputFromFixedValue="1"
			>
				<forward name="success" path="set endIndex"/>
			</pipe>

			<pipe name="set endIndex"
				className="nl.nn.adapterframework.pipes.PutInSession"
				sessionKey="endIndex"
				getInputFromFixedValue="3"
			>
				<forward name="success" path="delay"/>
			</pipe>
			
			<!-- put dummy looping and waiting code here... -->
			<pipe name="delay"
				className="nl.nn.adapterframework.pipes.DelayPipe"
				delayTime="3000"
			>
				<forward name="success" path="increment index"/>
			</pipe>			

			<pipe name="increment index"
				className="nl.nn.adapterframework.pipes.IncreaseIntegerPipe"
				sessionKey="index"
			>
				<forward name="success" path="compare values"/>
			</pipe>
			<!-- /put dummy looping and waiting code here... -->

			<pipe name="compare values"
				className="nl.nn.adapterframework.pipes.CompareIntegerPipe"
				sessionKey1="index"
				sessionKey2="endIndex"
			>
				<forward name="lessthan" path="delay"/>
				<forward name="equals" path="READY"/>
				<forward name="greaterthan" path="READY"/>
			</pipe>

		</pipeline>
	</adapter>

	<adapter
		name="TransactionTimeoutHandlingNonTransacted"
		description="Adapter for testing transactionTimeout handling. (Non transacted)"
	>
		<receiver
			transactionTimeout="2"
		>
			<listener
				className="nl.nn.adapterframework.receivers.JavaListener"
				name="TransactionTimeoutHandlingNonTransacted"
				serviceName="ibis4test-TransactionTimeoutHandlingNonTransacted"
			/>
		</receiver>

		<pipeline firstPipe="set start index">
			<exits>
				<exit path="READY" state="success"/>
			</exits>

			<pipe name="set start index"
				className="nl.nn.adapterframework.pipes.PutInSession"
				sessionKey="index"
				getInputFromFixedValue="1"
			>
				<forward name="success" path="set endIndex"/>
			</pipe>

			<pipe name="set endIndex"
				className="nl.nn.adapterframework.pipes.PutInSession"
				sessionKey="endIndex"
				getInputFromFixedValue="3"
			>
				<forward name="success" path="delay"/>
			</pipe>
			
			<!-- put dummy looping and waiting code here... -->
			<pipe name="delay"
				className="nl.nn.adapterframework.pipes.DelayPipe"
				delayTime="3000"
			>
				<forward name="success" path="increment index"/>
			</pipe>

			<pipe name="increment index"
				className="nl.nn.adapterframework.pipes.IncreaseIntegerPipe"
				sessionKey="index"
			>
				<forward name="success" path="compare values"/>
			</pipe>
			<!-- /put dummy looping and waiting code here... -->
			
			<pipe name="compare values"
				className="nl.nn.adapterframework.pipes.CompareIntegerPipe"
				sessionKey1="index"
				sessionKey2="endIndex"
			>
				<forward name="lessthan" path="delay"/>
				<forward name="equals" path="READY"/>
				<forward name="greaterthan" path="READY"/>
			</pipe>

		</pipeline>
	</adapter>
</module>
