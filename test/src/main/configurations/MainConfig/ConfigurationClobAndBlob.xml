<ibis>
	<adapter name="ClobAndBlob" description="Test the functioning handling CLOBs and BLOBs">
		<receiver className="nl.nn.adapterframework.receivers.GenericReceiver" name="ClobAndBlob">
			<listener className="nl.nn.adapterframework.receivers.JavaListener" serviceName="ibis4test-ClobAndBlob" />
		</receiver>
		<pipeline>
			<exits>
				<exit path="EXIT" state="success" />
			</exits>
			<pipe name="prepareDummyInput" className="nl.nn.adapterframework.pipes.FixedResult" storeResultInSessionKey="dummyInput" returnString="&lt;root&gt;dummyInput&lt;/root&gt;" />
			<pipe name="SwitchAction" className="nl.nn.adapterframework.pipes.XmlSwitch" getInputFromSessionKey="originalMessage"
			xpathExpression="request/@action"/>

			<!-- 01 InsertClobViaInputMessage -->
			<pipe name="InsertClobViaInputMessage" storeResultInSessionKey="clobKey">
				<sender className="nl.nn.adapterframework.jdbc.FixedQuerySender" query="INSERT INTO IBISTEMP (tkey,tclob) VALUES (SEQ_IBISTEMP.NEXTVAL,EMPTY_CLOB())" queryType="insert" jmsRealm="jdbc"
					resultQuery="SELECT SEQ_IBISTEMP.CURRVAL FROM DUAL" scalar="true" >
				</sender>
			</pipe>
			<pipe name="transformOriginalMessageForClob" className="nl.nn.adapterframework.pipes.XsltPipe" 
				getInputFromSessionKey="originalMessage"
				styleSheetName ="Jdbc/WrapDocument.xslt">
			</pipe>
			<pipe name="updateClobViaInputMessage">
				<sender className="nl.nn.adapterframework.jdbc.FixedQuerySender" query="SELECT tclob FROM IBISTEMP WHERE tkey=? FOR UPDATE " queryType="updateClob" jmsRealm="jdbc"> 
					<param name="key" sessionKey="clobKey" />
				</sender>
			</pipe>
			<pipe name="readClobAsResultMessage">
				<sender className="nl.nn.adapterframework.jdbc.FixedQuerySender" query="SELECT tclob FROM IBISTEMP WHERE tkey=?" queryType="select" jmsRealm="jdbc" scalar="true">
					<param name="key" sessionKey="clobKey" />
				</sender>
				<forward name="success" path="EXIT" />
			</pipe>

			<!-- 01b OverwriteClobViaInputMessage -->
			<pipe name="OverwriteClobViaInputMessage" storeResultInSessionKey="clobKey">
				<sender className="nl.nn.adapterframework.jdbc.FixedQuerySender" query="INSERT INTO IBISTEMP (tkey,tclob) VALUES (SEQ_IBISTEMP.NEXTVAL,EMPTY_CLOB())" queryType="insert" jmsRealm="jdbc"
					resultQuery="SELECT SEQ_IBISTEMP.CURRVAL FROM DUAL" scalar="true" >
				</sender>
			</pipe>
			<pipe name="WaitForClobRecordToSettleBeforeUpdating" className="nl.nn.adapterframework.pipes.DelayPipe" delayTime="0" /> <!-- necessary when streaming -->
			<pipe name="OverwriteClobViaInputMessage2" getInputFromSessionKey="">
				<sender className="nl.nn.adapterframework.jdbc.FixedQuerySender" query="SELECT tclob FROM IBISTEMP WHERE tkey=? FOR UPDATE " queryType="updateClob" jmsRealm="jdbc"> 
					<param name="key" sessionKey="clobKey" />
				</sender>
				<forward name="success" path="transformOriginalMessageForClob" />
			</pipe>

			
			<!-- 02 InsertClobViaClobSessionKey -->
			<pipe name="InsertClobViaClobSessionKey" storeResultInSessionKey="clobKey">
				<sender className="nl.nn.adapterframework.jdbc.FixedQuerySender" query="INSERT INTO IBISTEMP (tkey,tclob) VALUES (SEQ_IBISTEMP.NEXTVAL,EMPTY_CLOB())" queryType="insert" jmsRealm="jdbc"
					resultQuery="SELECT SEQ_IBISTEMP.CURRVAL FROM DUAL" scalar="true" 
					>
				</sender>
			</pipe>
			<pipe name="transformOriginalMessageAndStoreInClobSourceSessionVariable" className="nl.nn.adapterframework.pipes.XsltPipe" 
				getInputFromSessionKey="originalMessage"
				styleSheetName ="Jdbc/WrapDocument.xslt"
				storeResultInSessionKey="clobSource">
			</pipe>
			<pipe name="updateClobViaSessionKey" getInputFromSessionKey="dummyInput" > <!-- make sure input is not the same as clobSource session variable -->
				<sender className="nl.nn.adapterframework.jdbc.FixedQuerySender" query="SELECT tclob FROM IBISTEMP WHERE tkey=? FOR UPDATE" queryType="updateClob" jmsRealm="jdbc" 
					clobSessionKey="clobSource">
					<param name="key" sessionKey="clobKey" />
				</sender>
			</pipe>
			<pipe name="prepareClobResultSessionKey" className="nl.nn.adapterframework.pipes.FixedResult" storeResultInSessionKey="clobResult" returnString="${testdata.dir}/clobresult.txt" />
			<pipe name="readClobViaSessionKey" getInputFromSessionKey="dummyInput" >
				<sender className="nl.nn.adapterframework.jdbc.FixedQuerySender" query="SELECT tclob FROM IBISTEMP WHERE tkey=?" queryType="select" jmsRealm="jdbc" scalar="true"
					clobSessionKey="clobResult">
					<param name="key" sessionKey="clobKey" />
				</sender>
			</pipe>
			<pipe name="renderClob" className="nl.nn.adapterframework.pipes.FilePipe" actions="read" fileName="${testdata.dir}/clobresult.txt">
				<forward name="success" path="EXIT" />
			</pipe>


			<!-- 03 InsertBlobViaInputMessage -->
			<pipe name="InsertBlobViaInputMessage" storeResultInSessionKey="blobKey">
				<sender className="nl.nn.adapterframework.jdbc.FixedQuerySender" query="INSERT INTO IBISTEMP (tkey,tblob1) VALUES (SEQ_IBISTEMP.NEXTVAL,EMPTY_BLOB())" queryType="insert" jmsRealm="jdbc"
					resultQuery="SELECT SEQ_IBISTEMP.CURRVAL FROM DUAL" scalar="true" >
				</sender>
			</pipe>
			<pipe name="transformOriginalMessageForBlob" className="nl.nn.adapterframework.pipes.XsltPipe" 
				getInputFromSessionKey="originalMessage"
				styleSheetName ="Jdbc/WrapDocument.xslt">
			</pipe>
			<pipe name="updateBlobViaInputMessage">
				<sender className="nl.nn.adapterframework.jdbc.FixedQuerySender" query="SELECT tblob1 FROM IBISTEMP WHERE tkey=? FOR UPDATE " queryType="updateBlob" jmsRealm="jdbc"> 
					<param name="key" sessionKey="blobKey" />
				</sender>
			</pipe>
			<pipe name="readBlobViaInputMessage" >
				<sender className="nl.nn.adapterframework.jdbc.FixedQuerySender" query="SELECT tblob1 FROM IBISTEMP WHERE tkey=?" queryType="select" jmsRealm="jdbc" 
				scalar="true">
					<param name="key" sessionKey="blobKey" />
				</sender>
				<forward name="success" path="EXIT" />
			</pipe>
			
			<!-- 03b OverwriteBlobViaInputMessage -->
			<pipe name="OverwriteBlobViaInputMessage" storeResultInSessionKey="blobKey">
				<sender className="nl.nn.adapterframework.jdbc.FixedQuerySender" query="INSERT INTO IBISTEMP (tkey,tblob1) VALUES (SEQ_IBISTEMP.NEXTVAL,EMPTY_BLOB())" queryType="insert" jmsRealm="jdbc"
					resultQuery="SELECT SEQ_IBISTEMP.CURRVAL FROM DUAL" scalar="true" >
				</sender>
			</pipe>
			<pipe name="WaitForBlobRecordToSettleBeforeUpdating" className="nl.nn.adapterframework.pipes.DelayPipe" delayTime="0" /> <!-- necessary when streaming -->
			<pipe name="OverwriteBlobViaInputMessage2" getInputFromSessionKey="">
				<sender className="nl.nn.adapterframework.jdbc.FixedQuerySender" query="SELECT tblob1 FROM IBISTEMP WHERE tkey=? FOR UPDATE " queryType="updateBlob" jmsRealm="jdbc"> 
					<param name="key" sessionKey="blobKey" />
				</sender>
				<forward name="success" path="transformOriginalMessageForBlob" />
			</pipe>


			<!-- 04 InsertBlobViaBlobSessionKey -->
			<pipe name="InsertBlobViaBlobSessionKey" storeResultInSessionKey="blobKey">
				<sender className="nl.nn.adapterframework.jdbc.FixedQuerySender" query="INSERT INTO IBISTEMP (tkey,tblob1) VALUES (SEQ_IBISTEMP.NEXTVAL,EMPTY_BLOB())" queryType="insert" jmsRealm="jdbc" 
					resultQuery="SELECT SEQ_IBISTEMP.CURRVAL FROM DUAL" scalar="true" 
					>
				</sender>
			</pipe>
			<pipe name="transformOriginalMessageAndStoreInBlobSourceSessionVariable" className="nl.nn.adapterframework.pipes.XsltPipe" 
				getInputFromSessionKey="originalMessage"
				styleSheetName ="Jdbc/WrapDocument.xslt"
				storeResultInSessionKey="blobSource">
			</pipe>
			<pipe name="updateblobViaSessionKey" getInputFromSessionKey="dummyInput" >
				<sender className="nl.nn.adapterframework.jdbc.FixedQuerySender" query="SELECT tblob1 FROM IBISTEMP WHERE tkey=? FOR UPDATE" queryType="updateblob" jmsRealm="jdbc" 
					blobSessionKey="blobSource">
					<param name="key" sessionKey="blobKey" />
				</sender>
			</pipe>
			<pipe name="prepareBlobResultSessionKey" className="nl.nn.adapterframework.pipes.FixedResult" storeResultInSessionKey="blobResult" returnString="${testdata.dir}/blobresult1.txt" />
			<pipe name="readBlobViaSessionKey" getInputFromSessionKey="dummyInput" >
				<sender className="nl.nn.adapterframework.jdbc.FixedQuerySender" query="SELECT tblob1 FROM IBISTEMP WHERE tkey=?" queryType="select" jmsRealm="jdbc" scalar="true"
					blobSessionKey="blobResult">
					<param name="key" sessionKey="blobKey" />
				</sender>
			</pipe>
			<pipe name="renderBlob1" className="nl.nn.adapterframework.pipes.FilePipe" actions="read" fileName="${testdata.dir}/blobresult1.txt">
				<forward name="success" path="EXIT" />
			</pipe>


			<!-- 05 InsertBlobViaInputMessageNotCompressed -->
			<pipe name="InsertBlobViaInputMessageNotCompressed" storeResultInSessionKey="blobKey">
				<sender className="nl.nn.adapterframework.jdbc.FixedQuerySender" query="INSERT INTO IBISTEMP (tkey,tblob1) VALUES (SEQ_IBISTEMP.NEXTVAL,EMPTY_BLOB())" queryType="insert" jmsRealm="jdbc"
					resultQuery="SELECT SEQ_IBISTEMP.CURRVAL FROM DUAL" scalar="true" >
				</sender>
			</pipe>
			<pipe name="transformOriginalMessageForBlobNotCompressed" className="nl.nn.adapterframework.pipes.XsltPipe" 
				getInputFromSessionKey="originalMessage"
				styleSheetName ="Jdbc/WrapDocument.xslt">
			</pipe>
			<pipe name="updateBlobViaInputMessageNotCompressed">
				<sender className="nl.nn.adapterframework.jdbc.FixedQuerySender" query="SELECT tblob1 FROM IBISTEMP WHERE tkey=? FOR UPDATE " queryType="updateBlob" jmsRealm="jdbc"
				blobsCompressed="false"> 
					<param name="key" sessionKey="blobKey" />
				</sender>
			</pipe>
			<pipe name="readBlobViaInputMessageNotCompressed" >
				<sender className="nl.nn.adapterframework.jdbc.FixedQuerySender" query="SELECT tblob1 FROM IBISTEMP WHERE tkey=?" queryType="select" jmsRealm="jdbc" 
				blobsCompressed="false" scalar="true">
					<param name="key" sessionKey="blobKey" />
				</sender>
				<forward name="success" path="EXIT" />
			</pipe>
			
			<!-- 06 InsertBlobViaBlobSessionKeyNotCompressed -->
			<pipe name="InsertBlobViaBlobSessionKeyNotCompressed" storeResultInSessionKey="blobKey">
				<sender className="nl.nn.adapterframework.jdbc.FixedQuerySender" query="INSERT INTO IBISTEMP (tkey,tblob1) VALUES (SEQ_IBISTEMP.NEXTVAL,EMPTY_BLOB())" queryType="insert" jmsRealm="jdbc" blobsCompressed="false" 
					resultQuery="SELECT SEQ_IBISTEMP.CURRVAL FROM DUAL" scalar="true" 
					>
				</sender>
			</pipe>
			<pipe name="transformOriginalMessageAndStoreInBlobSessionVariableNotCompressed" className="nl.nn.adapterframework.pipes.XsltPipe" 
				getInputFromSessionKey="originalMessage"
				styleSheetName ="Jdbc/WrapDocument.xslt"
				storeResultInSessionKey="blobSource">
			</pipe>
			<pipe name="updateblobViaSessionKeyNotCompressed" getInputFromSessionKey="dummyInput">
				<sender className="nl.nn.adapterframework.jdbc.FixedQuerySender" query="SELECT tblob1 FROM IBISTEMP WHERE tkey=? FOR UPDATE" queryType="updateblob" jmsRealm="jdbc" 
					blobSessionKey="blobSource" blobsCompressed="false" >
					<param name="key" sessionKey="blobKey" />
				</sender>
			</pipe>
			<pipe name="prepareBlobResultSessionKey2" className="nl.nn.adapterframework.pipes.FixedResult" storeResultInSessionKey="blobResult" returnString="${testdata.dir}/blobresult2.txt" />
			<pipe name="readBlobViaSessionKeyNotCompressed" getInputFromSessionKey="dummyInput">
				<sender className="nl.nn.adapterframework.jdbc.FixedQuerySender" query="SELECT tblob1 FROM IBISTEMP WHERE tkey=?" queryType="select" jmsRealm="jdbc" scalar="true" 
					blobSessionKey="blobResult" blobsCompressed="false" >
					<param name="key" sessionKey="blobKey"/>
				</sender>
			</pipe>
			<pipe name="renderBlob2" className="nl.nn.adapterframework.pipes.FilePipe" actions="read" fileName="${testdata.dir}/blobresult2.txt">
				<forward name="success" path="EXIT" />
			</pipe>

			<!-- 07 InsertBlobViaInputMessageReadAsIfcompressed -->
			<pipe name="InsertBlobViaInputMessageReadAsIfcompressed" storeResultInSessionKey="blobKey">
				<sender className="nl.nn.adapterframework.jdbc.FixedQuerySender" query="INSERT INTO IBISTEMP (tkey,tblob1) VALUES (SEQ_IBISTEMP.NEXTVAL,EMPTY_BLOB())" queryType="insert" jmsRealm="jdbc"
					resultQuery="SELECT SEQ_IBISTEMP.CURRVAL FROM DUAL" scalar="true" >
				</sender>
			</pipe>
			<pipe name="updateBlobViaInputMessageReadAsIfcompressed" getInputFromSessionKey="originalMessage">
				<sender className="nl.nn.adapterframework.jdbc.FixedQuerySender" query="SELECT tblob1 FROM IBISTEMP WHERE tkey=? FOR UPDATE " queryType="updateBlob" jmsRealm="jdbc" blobsCompressed="false"> 
					<param name="key" sessionKey="blobKey" />
				</sender>
			</pipe>
			<pipe name="readBlobReadAsIfcompressed" >
				<sender className="nl.nn.adapterframework.jdbc.FixedQuerySender" query="SELECT tblob1 FROM IBISTEMP WHERE tkey=?" queryType="select" jmsRealm="jdbc" 
				scalar="true">
					<param name="key" sessionKey="blobKey" />
				</sender>
				<forward name="success" path="EXIT" />
				<forward name="exception" path="EXIT" />
			</pipe>
		</pipeline>
	</adapter>
</ibis>