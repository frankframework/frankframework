<?xml version="1.0" encoding="UTF-8"?>
<log4j2:Configuration status="warn" name="${ff:instance.name}" strict="true" xmlns="http://logging.apache.org/log4j/2.0/config" xmlns:log4j2="log4j-config.xsd">
	<Appenders>
		<Appender name="container" type="Console">
			<PatternLayout>
				<Pattern>%d{yyyy-MM-dd HH:mm:ss,SSS} - %m%n%xEx{short}</Pattern>
			</PatternLayout>
		</Appender>
	</Appenders>
	<Loggers>
		<Logger name="cypress" level="INFO">
			<AppenderRef ref="container"/>
		</Logger>
		<Logger name="org.frankframework.runner" level="INFO">
			<AppenderRef ref="stdout"/>
		</Logger>
		<Logger name="org.testcontainers" level="INFO">
			<AppenderRef ref="container"/>
		</Logger>
	</Loggers>
</log4j2:Configuration>
