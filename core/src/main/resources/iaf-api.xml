<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:cxf="http://cxf.apache.org/core"
	xmlns:jaxrs="http://cxf.apache.org/jaxrs"
	xsi:schemaLocation="
		http://cxf.apache.org/core http://cxf.apache.org/schemas/core.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		http://cxf.apache.org/jaxrs http://cxf.apache.org/schemas/jaxrs.xsd">

	<import resource="classpath:META-INF/cxf/cxf.xml" />

	<cxf:bus>
		<cxf:features>
			<cxf:logging />
		</cxf:features>
	</cxf:bus>

	<bean id="apiExceptionHandler" class="nl.nn.adapterframework.webcontrol.api.ApiExceptionHandler" />
	<bean id="jsonProvider" class="org.codehaus.jackson.jaxrs.JacksonJsonProvider"/>

	<bean id="swagger" class="nl.nn.adapterframework.webcontrol.api.Swagger">
		<property name="scanAllResources" value="true"/> <!-- this is very slow -->
		<property name="resourcePackage" value="nl.nn.adapterframework.webcontrol.api"/>
	</bean>

<!-- 	<bean id="authorizationFilter" class="nl.nn.adapterframework.webcontrol.api.AuthorizationFilter"> -->
		<!-- authorization bean properties -->
<!-- 	</bean> -->

	<jaxrs:server id="IAF-API" address="/" basePackages="nl.nn.adapterframework.webcontrol.api">
		<jaxrs:providers>
<!-- 			<ref bean="authorizationFilter" /> -->
			<ref bean="apiExceptionHandler" />
			<ref bean="jsonProvider" />
		</jaxrs:providers>
		<jaxrs:features>
			<ref bean="swagger" />
		</jaxrs:features>
	</jaxrs:server>
</beans>
