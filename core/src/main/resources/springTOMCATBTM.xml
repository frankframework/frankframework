<?xml version="1.0" encoding="UTF-8"?>
<beans
	xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation=
		"
			http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
		"
	>

	<import resource="springTOMCAT.xml"/>
	<import resource="springJms.xml"/>

	<bean
		name="txManagerReal"
		class="nl.nn.adapterframework.jta.btm.BtmJtaTransactionManager"
		depends-on="btmTransactionManager"
		>
		<property name="statusFile" value="${transactionlog.dir}/status.txt" />
	</bean>

	<bean
		name="btmTransactionManager"
		class="bitronix.tm.TransactionManagerServices"
		factory-method="getTransactionManager"
		depends-on="btmConfig,defaultDataSource"
		destroy-method="shutdown"
	/>

	<bean
		name="btmConfig"
		class="bitronix.tm.TransactionManagerServices"
		factory-method="getConfiguration"
		>
			<property name="serverId" value="${transactionmanager.uid}"/>
			<property name="logPart1Filename" value="${transactionlog.dir}/1.tlog" />
			<property name="logPart2Filename" value="${transactionlog.dir}/2.tlog" />
	</bean>

	<bean id="dataSourceFactory" class="nl.nn.adapterframework.jta.btm.BtmDataSourceFactory" />
	<bean id="connectionFactoryFactory" class="nl.nn.adapterframework.jta.btm.BtmConnectionFactoryFactory" />

</beans>
