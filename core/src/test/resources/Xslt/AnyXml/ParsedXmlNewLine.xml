<configuration>
	<adapter name="XMLNL">
		<receiver className="nl.nn.adapterframework.receivers.GenericReceiver" name="XMLNL">
			<listener className="nl.nn.adapterframework.receivers.JavaListener" name="XMLNL"/>
		</receiver>
		<pipeline firstPipe="Concatenate">
			<exits>
				<exit path="EXIT" state="success"/>
			</exits>

			<pipe name="Concatenate" className="nl.nn.adapterframework.pipes.XsltPipe" xpathExpression="string-join(('Hello'            , 'Test'            , 'Line3'            ), $New_line)">
				<param name="New_line" value="&#10;"/>
				<forward name="success" path="EXIT"/>
			</pipe>
		</pipeline>
	</adapter>
</configuration>