<databaseChangeLog
	xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
		http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd"
	objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">

	<changeSet id="TestTable:1:BLOB_NOT_NULL" author="Tim van der Leeuw">
		<comment>Add BLOB_NOT_NULL Table</comment>
		<createTable tableName="BLOB_NOT_NULL">
			<column name="TKEY" type="BIGINT" autoIncrement="true">
				<constraints primaryKey="true" nullable="false" primaryKeyName="PK_BLOB_NOT_NULL"/>
			</column>
			<!-- LONGBLOB required for MySQL and MariaDB, compatible with BLOB for other dbmses -->
			<column name="TBLOB" type="LONGBLOB">
				<constraints nullable="false"/>
			</column>
		</createTable>
	</changeSet>
	<changeSet id="TestTable:2:BLOB_NOT_NULL" author="Tim van der Leeuw" onValidationFail="MARK_RAN">
		<comment>Set sequence for BLOB_NOT_NULL Table</comment>
		<createSequence sequenceName="SEQ_BLOB_NOT_NULL" startValue="161332"/>
	</changeSet>
	<changeSet id="TestTable:3:CLOB_NOT_NULL" author="Tim van der Leeuw">
		<comment>Add CLOB_NOT_NULL Table</comment>
		<createTable tableName="CLOB_NOT_NULL">
			<column name="TKEY" type="BIGINT" autoIncrement="true">
				<constraints primaryKey="true" nullable="false" primaryKeyName="PK_CLOB_NOT_NULL"/>
			</column>
			<column name="TCLOB" type="CLOB">
				<constraints nullable="false"/>
			</column>
		</createTable>
	</changeSet>
	<changeSet id="TestTable:4:CLOB_NOT_NULL" author="Tim van der Leeuw" onValidationFail="MARK_RAN">
		<comment>Set sequence for CLOB_NOT_NULL Table</comment>
		<createSequence sequenceName="SEQ_CLOB_NOT_NULL" startValue="161332"/>
	</changeSet>
</databaseChangeLog>
