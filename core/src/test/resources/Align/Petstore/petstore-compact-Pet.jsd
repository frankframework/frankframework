{
    "$schema":"http://json-schema.org/draft-04/schema#",
    "$ref":"#/definitions/Pet",
    "definitions":{
        "Pet":{
            "$ref":"#/definitions/petType"
        },
        "Pets":{
            "type":"array",
            "minItems":1,
            "items":{
                "$ref":"#/definitions/petType"
            }
        },
        "petType":{
            "type":"object",
            "additionalProperties":false,
            "properties":{
                "id":{
                    "type":"integer"
                },
                "name":{
                    "type":"string"
                },
                "tag":{
                    "type":"string"
                }
            },
            "required":[
                "id",
                "name"
            ]
        }
    }
}