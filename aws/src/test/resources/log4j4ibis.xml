<?xml version="1.0" encoding="UTF-8"?>
<log4j2:Configuration xmlns:log4j2="log4j-config.xsd" name="${ctx:instance.name}-test">
	<Appenders>
		<Console name="stdout">
			<PatternLayout pattern="%d{HH:mm:ss,SSS} %-5p %c{1}.%M():%L %m%n"/>
		</Console>
	</Appenders>

	<Loggers>
		<Logger name="org.frankframework" level="DEBUG" />

		<Root level="INFO">
			<AppenderRef ref="stdout"/>
		</Root>
	</Loggers>
</log4j2:Configuration>
